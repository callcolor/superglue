{
  "compilerOptions": {
    "target": "esnext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "sourceMap": true,
    "paths": {
      "*": ["./types/*"]
    }
  },
  "ts-node": {
    "esm": true,
    "files": true
  },
  "exclude": ["node_modules"]
}
